<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h2>Admin Dashboard</h2>
<a href="/admin/add-product">Add New Product</a>
<table>
    <tr>
        <th>ID</th><th>Name</th><th>Price</th><th>Actions</th>
    </tr>
    <% products.forEach(product => { %>
    <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td>$<%= product.price %></td>
        <td>
            <a href="/admin/edit-product/<%= product.id %>">Edit</a>
            <form action="/admin/delete-product/<%= product.id %>" method="POST" style="display:inline;">
                <button>Delete</button>
            </form>
        </td>
    </tr>
    <% }) %>
</table>

</body>
</html>