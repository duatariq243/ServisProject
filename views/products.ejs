<%- include("partials/header.ejs") %>

<div class="container">
  <h2>Products</h2>

  <div class="product-grid">
    <% products.forEach(product => { %>
      <div class="product-card">
        <img src="<%= product.image %>" alt="<%= product.name %>" width="200">

        <h3><%= product.name %></h3>
        <p>$<%= product.price %></p>
      </div>
    <% }) %>
  </div>

  <a href="/cart" class="cart-btn">Go to Cart</a>
</div>

