<%- include("partials/header.ejs") %>

<div class="container">
  <h2>Products</h2>

   <div class="product-grid">
  <% products.forEach(p => { %>
  <div class="product-card">
      <img src="<%= p.image %>" width="200" />

      <h3><%= p.name %></h3>
      <p>$<%= p.price %></p>

      <button class="red-btn add-to-cart-btn"
              data-id="<%= p.id %>">
          Add To Cart
      </button>
  </div>
  <% }) %>
</div>


